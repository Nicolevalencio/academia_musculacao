package br.com.infox.telas;

import java.sql.*;
import br.com.infox.dal.ModuloConexao;
import java.awt.Color;
import java.awt.HeadlessException;
import javax.swing.JOptionPane;


public class TelaLogin extends javax.swing.JFrame {
    Connection conexao = null;
    // é mais  um framework , um conjunto de bibliotecas p manipular no mysql
    PreparedStatement pst = null;
    ResultSet rs = null;
    
    public void logar(){
        // logica principal para pesquisar no banco de dados
        String sql = "select * from usuarios where login = ?  and senha = ?";
       
        
       try {
           this.conexao = ModuloConexao.conector();
           // as linhas abaixo preparam a consulta ao abanco em funcao do 
           // que foi digitado na caixa de texto o "?" é substituido
           // pelo conteudo das variaveis
              pst = conexao.prepareStatement(sql);
              pst.setString(1,txtUsuario.getText());
              pst.setString(2,txtSenha.getText());
              // a linha abaixo executa a linha query(consulta)
              rs = pst.executeQuery();
              // se existir usuario e senha correspondente
             // System.out.println("aqui");
              
              if (rs.next ()){
                  //a linha abaixo otem o conteudo do campo perfil usuarios
                
                  String perfil=rs.getString(6);
                  //System.out.println(perfil);
                  // a estrutura abaixo fz o tratamento do perfil do usuario
                  // ou seja ele que faz a permissao de dados
                  if(perfil.equals("admin"))  {                                  
                  Telaprincipal principal = new Telaprincipal ();
                  principal.setVisible(true);
                  Telaprincipal.menuRel.setEnabled(true);
                  Telaprincipal.menucaduso.setEnabled(true);
                  Telaprincipal.lblUsuario.setText(rs.getString(2));
                  Telaprincipal.lblUsuario.setForeground(Color.BLUE);
                  this.dispose();
                  //se nao for o perfil admin ele naoira liberar todos os campos
                  }else{
                      Telaprincipal principal = new Telaprincipal ();
                      principal.setVisible(true);
                      Telaprincipal.lblUsuario.setText(rs.getString(2));
                      this.dispose();
              }
                  
                  conexao.close();
                  
              }else{
                  JOptionPane.showMessageDialog (null,"usuário e/ou senha inválido");
              }
              
        } catch (HeadlessException | SQLException e) {
            System.out.println(e);
            
            JOptionPane.showMessageDialog(null,e);
        }
    }
    
    
    public TelaLogin() {
        initComponents();
        conexao = ModuloConexao.conector();
       // a linha abaixo serve de apoio  ao status da conexao
       // System.out.println(conexao);
        if (conexao != null){
            btn_status.setText("Conectado");
            //btn_status.setIcon(new javax.swing.ImageIcon(getClass().getResource("/br/com/infox/icones/sim.png")));
        }else{
             btn_status.setText(" Não conectado");
            //btn_status.setIcon(new javax.swing.ImageIcon(getClass().getResource("/br/com/infox/icones/nao.png")));
        }
    
    }  
    
    
    
    
    

