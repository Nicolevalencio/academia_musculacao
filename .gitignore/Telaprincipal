    private void menucadprofActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // a linha acima mostra que o botao esta funcioando como cadastro
    }                                           

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     
        
        // As linhas abaixo substituem a label lblDate pela
        // data atual do sistema ao iniciar a form
         Date data = new Date();
         DateFormat formatador = DateFormat.getDateInstance(DateFormat.SHORT);
         lblData.setText(formatador.format(data));
    }                                    

    private void menuOpc_sairActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // exibe uma caixa de dialogo
        int sair = JOptionPane.showConfirmDialog(null,"Tem certeza que deseja sair","Atenção", JOptionPane.YES_NO_OPTION);
        if (sair == JOptionPane.YES_OPTION){
            System.exit(0);        
        }
    }                                            

    private void menucadusoActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // as linhas abaixo vao abrir o form TelaUsuario dentro do desktop pane
        TelaUsuario usuario = new TelaUsuario();
        usuario.setVisible(true);
        desktop.add(usuario);
    }                                          

    private void menucadAluActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // chama a tela aluno/ou cliente
        TelaCliente cliente = new  TelaCliente ();
        cliente.setVisible(true);
        desktop.add(cliente);
    }                                          

